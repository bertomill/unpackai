# UnpackAI Environment Configuration

# N8n Integration
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/unpackai
N8N_API_KEY=your_n8n_api_key_here

# Agentic Workflow APIs
TAVILY_API_KEY=your_tavily_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Redis Configuration
# For local development (Redis installed via Homebrew)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# For Redis Cloud (Production)
# REDIS_HOST=your-redis-cloud-endpoint.c1.us-east1-2.gce.cloud.redislabs.com
# REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_cloud_password_here

# N8n Configuration
N8N_WEBHOOK_URL=https://robertmill.app.n8n.cloud/webhook/agentic-workflow
N8N_API_KEY=your_n8n_api_key_here

# News API Configuration (when implemented)
NEWS_API_KEY=your_news_api_key_here
NEWS_API_URL=https://newsapi.org/v2

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=UnpackAI

# Database Configuration (Neon Database)
DATABASE_URL=postgresql://username:password@ep-xxx.us-east-1.aws.neon.tech/unpackai?sslmode=require

# Authentication
JWT_SECRET=your_jwt_secret_key_here
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# Analytics (when implemented)
GOOGLE_ANALYTICS_ID=your_ga_id_here

# Content Delivery Network
NEXT_PUBLIC_CDN_URL=https://your-cdn.com

# Feature Flags
NEXT_PUBLIC_ENABLE_BOOKMARKS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=true
